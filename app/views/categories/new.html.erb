<section class='signin-container'>
<h1>Add a new category.</h1>

<%= form_with model: @category, url: categories_path, method: :post, scope: :category, locals: { category: @category } do |form| %>

<div class='form-item'>
      <%= form.label :name, class: 'form-label' %>
      <%= form.text_field :name, class:"input-form" %>
</div>

<div class='form-item'>
      <%= form.label :icon, class: 'form-label' %>
      <%= form.text_field :icon, class:"input-form" %>
</div>

<%= form.submit "Add category" , class:"form-button" %>
  <% end %>
  <%= link_to 'back', categories_path %>

</section>

